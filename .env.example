# Application Settings
APP_NAME="Ody API"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:9501
APP_TIMEZONE=UTC

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=9501
SERVER_WORKERS=4
SERVER_MAX_REQUEST=10000
SERVER_DAEMONIZE=false

# Database Settings
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ody
DB_USERNAME=root
DB_PASSWORD=pass
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT_MODE=true

# Logging
LOG_FILE=storage/logs/app.log

# CORS Settings
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS="GET, POST, PUT, DELETE, OPTIONS"
CORS_ALLOW_HEADERS="Content-Type, Authorization, X-Requested-With, X-API-Key"
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

# Cache Settings
CACHE_DRIVER=file
CACHE_PREFIX=ody_cache

# Session Settings (if needed)
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security Settings
AUTH_DRIVER=token
AUTH_TOKEN_EXPIRY=86400
AUTH_JWT_SECRET=your-jwt-secret-key-here
AUTH_JWT_ALGO=HS256
